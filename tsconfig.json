{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "LATER": ["src/back/LATER.ts"]
        }
    },
    "include": [
        //
        "src",
        "flows",
        "flows/global.d.ts"
    ],
    "exclude": [
        //
        "tsconfig.node.json",
        "src/extension.ts",
        "src/extension/"
    ],
    "references": [
        //
        { "path": "./tsconfig.node.json" }
    ]
}
