{
    "compilerOptions": {
        "strict": true
    },
    "lint": {
        "files": {
            "include": [
                "src/"
            ]
        },
        "rules": {
            "tags": [
                "recommended"
            ],
            "include": [
                "ban-untagged-todo"
            ],
            "exclude": [
                "no-unused-vars"
            ]
        }
    },
    "fmt": {
        "files": {
            "include": [
                "src/"
            ],
            "exclude": [
                "src/testdata/"
            ]
        },
        "options": {
            "useTabs": false,
            "lineWidth": 120,
            "indentWidth": 4,
            "singleQuote": true,
            "proseWrap": "preserve",
            "semiColons": false
        }
    }
}