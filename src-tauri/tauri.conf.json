{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "pnpm vite:build",
        "beforeDevCommand": "pnpm vite:dev",
        "devPath": "http://127.0.0.1:5173/",
        "distDir": "../dist"
    },
    "package": {
        "productName": "cushy-studio",
        "version": "0.0.38"
    },
    "tauri": {
        "allowlist": {
            "all": true,
            "dialog": {
                "all": true,
                "open": true,
                "save": true
            },
            "fs": {
                "all": true,
                "copyFile": true,
                "createDir": true,
                "exists": true,
                "readDir": true,
                "readFile": true,
                "removeDir": true,
                "removeFile": true,
                "renameFile": true,
                "writeFile": true,
                "scope": ["**"]
            },
            "http": {
                "all": true,
                "request": true,
                "scope": ["https://**", "http://**"]
            }
        },

        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
            "identifier": "com.CushyStudio.app",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "fullscreen": false,
                "height": 600,
                "resizable": true,
                "title": "CushyStudio",
                "width": 800
            }
        ]
    }
}
