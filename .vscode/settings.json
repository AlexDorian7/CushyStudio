{
    "editor.formatOnSave": true,
    "peacock.color": "#2c0432",
    "editor.indentSize": 4,
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#560861",
        "activityBar.background": "#560861",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#76680a",
        "activityBarBadge.foreground": "#e7e7e7",
        "commandCenter.border": "#e7e7e799",
        "sash.hoverBorder": "#560861",
        "statusBar.background": "#2c0432",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#560861",
        "statusBarItem.remoteBackground": "#2c0432",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeBackground": "#2c0432",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#2c043299",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "typescript.tsserver.experimental.enableProjectDiagnostics": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        // so vscode remains fast
        "**/ComfyUI": true,
        "**/venv": true
    },
    "pasteImage.path": "website/static/img/screenshots/"
}
