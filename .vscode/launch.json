{
    // https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // start the extension in a fresh vscode
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
            "outFiles": ["${workspaceFolder}/out/**/*.js"],
            "preLaunchTask": "${defaultBuildTask}"
        },
        // run the extension test suite
        {
            "name": "Extension Tests",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/out/test/suite/index",
                // https://stackoverflow.com/questions/71572862/how-do-i-disable-all-extraneous-extensions-in-the-vs-code-extension-development
                "--disable-extensions"
            ],
            "outFiles": ["${workspaceFolder}/out/test/**/*.js"],
            "preLaunchTask": "${defaultBuildTask}"
        },
        // run current file in node quickly
        {
            "type": "node",
            "request": "launch",
            "runtimeArgs": ["--loader", "ts-node/esm", "--experimental-specifier-resolution=node", "--experimental-modules"],
            "name": "tsnode",
            "skipFiles": ["<node_internals>/**"],
            "runtimeExecutable": "${env:HOME}/.nvm/versions/node/v19.0.0/bin/node",
            "program": "${relativeFile}",
            "outFiles": ["${workspaceFolder}/**/*.js"],
            "console": "integratedTerminal"
        }
    ]
}
